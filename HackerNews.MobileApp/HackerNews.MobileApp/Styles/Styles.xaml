<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="HackerNews.MobileApp.Styles.Styles"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="ArticleCategory" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratBold}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>
    <Style x:Key="ArticleContent" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="ArticleDate" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource ZillaSlabRegularItalic}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="TextColor" Value="{StaticResource GreyC}" />
    </Style>

    <Style x:Key="ArticleScore" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratBold}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>
</ResourceDictionary>