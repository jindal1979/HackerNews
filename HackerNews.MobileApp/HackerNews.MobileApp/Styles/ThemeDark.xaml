<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="HackerNews.MobileApp.Styles.Colors"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="DarkH1" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource ZillaSlabRegular}" />
        <Setter Property="FontSize" Value="44" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkH2" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource ZillaSlabRegular}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkH3" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource ZillaSlabRegular}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkH4" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
        <Setter Property="FontSize" Value="19" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkH5" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource ZillaSlabRegularItalic}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkH6" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
    <Style x:Key="DarkP" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>
</ResourceDictionary>